<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/rebutton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red"
        android:layout_centerInParent="true"
        android:background="@color/colorBlue"/>

    <Button
        android:id="@+id/rebutton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GREEN"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/rebutton1"
        android:background="@color/colorGreen"/>
    <Button
        android:id="@+id/rebutton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/rebutton1"
        android:text="Indigo"
        android:background="@color/colorIndIgo"/>

    <Button
        android:id="@+id/rebutton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="orange"
        android:background="@color/colorOrange"/>

    <Button
        android:id="@+id/rebutton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="yellow"
        android:background="@color/colorYellow"/>

    <Button
        android:id="@+id/rebutton6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="violet"
        android:background="@color/colorViolet"/>
    <Button
        android:id="@+id/rebutton7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="red"
        android:background="@color/colorRED"/>
</RelativeLayout>